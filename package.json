{
  "name": "hymmnos-syntax",
  "displayName": "hymmnos syntax",
  "description": "Provides syntax for Hymmnos language in Visual Studio Code.",
  "version": "0.0.1",
  "publisher": "fau-varda",
  "repository": {
    "type": "git",
    "url": "https://github.com/tyon-tyon/hymmnos-syntax/issues"
  },
  "engines": {
    "vscode": "^1.89.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hymmnos",
        "aliases": [
          "Hymmnos",
          "hymmnos"
        ],
        "extensions": [
          ".hym"
        ],
        "configuration": "./language-configuration.json",
        "icon": {
          "light": "./images/hymmnos-icon.png",
          "dark": "./images/hymmnos-icon.png"
        }
      }
    ],
    "grammars": [
      {
        "language": "hymmnos",
        "scopeName": "source.hymmnos",
        "path": "./syntaxes/hymmnos.tmLanguage.json"
      }
    ],
    "icons": {
      "component-hymmnos": {
        "description": "Hymmnos file icon",
        "default": {
          "fontCharacter": "H",
          "fontPath": "./images/hymmnos-icon.png",
          "fontColor": "#6a6ae5",
          "fontSize": 150,
          "fontWeight": "normal"
        }
      }
    }
  }
}